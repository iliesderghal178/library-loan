   
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="./style.css" type="text/css" rel="stylesheet" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="./main.js"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	</head>
	<body>
		<h1>ADD BOOKS</h1>
		<header>
			<a href="/" class="btn btn-primary">Home</a>
			<a href="/logout" class="btn btn-primary">Log out</a>
		</header>
		<main>
		<form action="/book" method="post">
			
			<input type="text" name="librarian_id" value="{{id}}" hidden>
			<input type="date" name="current_date" id="current_date" value="{{body.date}}" hidden>
			
			<p>
				<label  for="user">Name of book</label><br />
				<input class="form-control" type="text" name="name" placeholder="Book name" value="{{body.name}}" autofocus required>
			</p>
			<p>
				<label  for="author">Primary author</label><br />
				<input class="form-control"  type="text" name="author" placeholder="Primary author" value="{{body.author}}" required>
			</p>
			<p>
				<label for="isbn">ISBN 13 #</label><br />
				<input class="form-control"  type="text" name="isbn" placeholder="ISBN 13" value="{{body.isbn}}" required>
			</p>
			<p>
				<label for="ddc">Dewey Classification number</label><br />
				<input class="form-control"  type="text" name="ddc" placeholder="DDC" value="{{body.ddc}}" required>
			</p>
			<p>
				<label for="quantity">Quantity</label><br />
				<input type="range" name="quantity" min="1" max="10" class="slider" value="1" required>
			</p>
			<p>
				<label for="time_period">Time Period</label><br />
				<select class="form-control" name="time_period" id="time_period" >
					<option value="1">24 hrs</option>
					<option value="2">2 days</option>
					<option value="7">1 Week</option>
					<option value="14">2 Week</option>
					<option value="30">1 Month</option>
				</select>
			</p>
			<p><input type="submit" class="btn btn-success" value="Add Book"></p>
		</form>
		</main>
	</body>
</html>
<script>
	$(".slider").change(function(){
		$(this).attr("title", $(this).val());
	});

	document.getElementById('time_period').value='7';
	document.getElementById('current_date').valueAsDate=new Date();
</script>
