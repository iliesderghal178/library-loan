   
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="/style.css" type="text/css" rel="stylesheet" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	</head>
	<body>
		<h1>LIBRARIAN PORTAL</h1>
		<header>
			<a href="/logout" class="btn btn-primary">Log out</a>
			
			<a href="/" class="btn btn-primary">Home page</a>
		</header>
		<main>
			<br>
            <table id="myTable" class="table table-striped" >
                <tr><th colspan='3'>BORROWED BOOKS</th></tr>
                <tr>
                    <th>Name</th>
                    <th>Due Date</th>
					<th>Return</th>
                </tr>
                {{#each borrow_record}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.return_date}}</td>
						<td><a href="/student-record/book_id={{this.book_id}}/id={{this.user_id}}">return</a></td>
                    </tr>
                {{/each}}
            </table>
            <br>
            <br>
			<h3>Borrow a book</h3>
			<form action="/student-record" method="post">
			
			<input type="text" name="user_id" value="{{id}}" hidden>
			<input type="date" name="current_date" id="current_date" value="{{body.date}}" hidden>
			
			<p>
				<label for="uuid">Name of book</label><br />
				<input type="text" name="uuid" placeholder="Enter UUID of book" value="{{body.uuid}}" autofocus required>
			</p>
			
			<p><input type="submit" value="Borrow Book"></p>
		</form>

		    
		</main>
	</body>
</html>
<script>
	document.getElementById('current_date').valueAsDate=new Date();
	function myFunction() {
		var input, filter, table, tr, td1, i, txtValue, date1;
		input = document.getElementById("myInput");
		filter = new Date();
		table = document.getElementById("myTable");
		tr = table.getElementsByTagName("tr");
		for (i = 0; i < tr.length; i++) {
			td = tr[i].getElementsByTagName("td")[1];
			if (td ) {
			txtValue = td.textContent || td.innerText;
			date1 = new Date(txtValue);
			console.log(date1 > filter);
			if (Number(date1) > Number(filter) ) {
				tr[i].style.backgroundColor = "white";
			} else {
				tr[i].style.backgroundColor = "red";
			}
			}       
		}
		}

		myFunction();
</script>